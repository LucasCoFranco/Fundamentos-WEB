<!-- views/editVehicle.handlebars -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Editar Veículo</title>
</head>
<body>
    <h1>Editar Veículo</h1>
    <form action="/alterar/{{ dados.id }}" method="POST">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="{{ dados.nome }}" required><br><br>

        <label for="veiculo">Veiculo:</label>
        <input type="text" id="veiculo" name="veiculo" value="{{ dados.veiculo }}" required><br><br>

        <label for="marca">Marca:</label>
        <input type="text" id="brand" name="brand" value="{{ dados.marca }}" required><br><br>

        <label for="ano">Ano:</label>
        <input type="number" id="ano" name="ano" value="{{ dados.ano }}" required><br><br>

        <label for="endereco">Endereço:</label>
        <input type="text" id="endereco" name="endereco" value="{{ dados.endereco }}" required><br><br>

        <label for="email">E-mail:</label>
        <input type="email" id="email" name="email" value="{{ dados.email }}" required><br><br>

        <label for="telefone">Telefone:</label>
        <input type="tel" id="telefone" name="telefone" value="{{ dados.telefone }}" required><br><br>

        <button type="submit">Salvar Alterações</button>
    </form>
</body>
</html>
